<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="15dp"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="书籍名称"
            android:textSize="20sp"
            android:id="@+id/item_focus_bookname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="日期"
            android:textSize="20sp"
            android:id="@+id/item_focus_date"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <TextView
                android:text="开始阅读:"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
            <TextView
                android:text="12：23"
                android:textSize="20sp"
                android:id="@+id/item_focus_startTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            >

            <TextView
                android:text="结束阅读:"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:text="12：55"
                android:textSize="20sp"
                android:id="@+id/item_focus_endTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>


        
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/item_focus_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一小时20分"
            android:textSize="26sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#43ffffff"
        >
    </LinearLayout>

</LinearLayout>