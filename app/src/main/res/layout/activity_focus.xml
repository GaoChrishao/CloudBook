<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FocusActivity"
    android:background="@drawable/bkg_login_blur_dark"
    android:orientation="vertical"
    android:gravity="center"
    android:animateLayoutChanges="true"
    android:id="@+id/focus_layout_main"
    >


    <LinearLayout
        android:id="@+id/focus_layout_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:gravity="center"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/focus_pic"
            android:layout_width="240dp"
            android:layout_height="240dp"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/focous_tv_m"
            android:textSize="70sp"
            android:text="00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
        <TextView
            android:textSize="70sp"
            android:text=":"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
        <TextView
            android:id="@+id/focous_tv_s"
            android:textSize="70sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/focus_bookname"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:text="正在阅读：第一行代码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        >

        <Button
            android:id="@+id/focous_start"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_yuanjiao_btn_grey"
            android:text="开始"
            />
        <Button
            android:id="@+id/focous_stop"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_yuanjiao_btn_grey"
            android:text="停止"
            />
    </LinearLayout>
</LinearLayout>