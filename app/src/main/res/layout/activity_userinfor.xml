<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    android:id="@+id/userInfor_layout_main"
    android:background="@drawable/bkg_test"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        >
        <Button
            android:id="@+id/userInfor_back"
            android:background="@drawable/ic_back"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>
    <ScrollView
        android:id="@+id/f_main_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <LinearLayout
                android:id="@+id/userInfor_head_bkg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="15dp"
                android:layout_margin="15dp"
                android:orientation="vertical"
                android:background="#00000000"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginTop="15dp"
                    android:id="@+id/userInfor_userPic"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/user_pic"
                    />
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/userInfor_layout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_margin="15dp"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="@drawable/background_untranscened"
                >
                <TextView
                    android:text="用户基本信息"
                    android:textSize="30sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/Userinfor_tv_id"
                    android:text="账号：123456789"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    />
                <TextView
                    android:id="@+id/Userinfor_tv_name"
                    android:text="昵称：御马亲征"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/userInfor_layout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_margin="15dp"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="@drawable/background_untranscened"
                >
                <TextView
                    android:text="阅读信息"
                    android:textSize="30sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/Userinfor_tv_exp"
                    android:text="经验值：1234（lv.8）"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    />
                <TextView
                    android:id="@+id/Userinfor_tv_ach"
                    android:text="成就值：1234"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    />
                <TextView
                    android:id="@+id/Userinfor_tv_readtime"
                    android:text="总阅读时长：1234m"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    />
                <TextView
                    android:id="@+id/Userinfor_tv_books"
                    android:text="总购书量：1234"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/userInfor_layout3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_margin="15dp"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="@drawable/background_untranscened"
                >
                <TextView
                    android:text="成就情况"
                    android:textSize="30sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:id="@+id/userInfor_rv_achi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/userInfor_layout4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_margin="15dp"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="@drawable/background_untranscened"
                >
                <TextView
                    android:text="最近发表"
                    android:textSize="30sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:id="@+id/userInfor_rv_writer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>